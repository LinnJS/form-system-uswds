{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "src/**", ".storybook/**"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "storybook-static/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "env": ["NODE_ENV"]
    },
    "typecheck": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx"]
    },
    "check-types": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx"]
    },
    "lint:fix": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:open": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "env": ["CI"]
    }
  }
}
