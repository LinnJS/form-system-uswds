{
  "extends": "@acme/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.d.ts",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "vite.config.mjs",
    "vitest.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs",
    "playwright.config.ts",
    "tests/**/*.ts",
    "tests/**/*.spec.ts"
  ],
  "exclude": ["node_modules", "dist", "storybook-static", "**/*.stories.tsx"]
}
